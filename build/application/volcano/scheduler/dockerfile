from swr.cn-south-1.myhuaweicloud.com/openioctopus/kratos:v2 as builder
WORKDIR /app
COPY ./server/volcano/go.mod ./server/volcano/go.sum ./
RUN go mod download
COPY ./ ./

ENV GOPATH /go
ENV CGO_ENABLED 0
ENV GO111MODULE on
ENV GOPROXY=https://goproxy.cn,direct

RUN make scheduler_build binary_dir="/app/server/bin"

FROM alpine
WORKDIR /app
COPY --from=builder /app/server/bin/scheduler /app/scheduler
RUN chmod +x /app/scheduler
EXPOSE 7002

ENTRYPOINT ["/app/scheduler"]